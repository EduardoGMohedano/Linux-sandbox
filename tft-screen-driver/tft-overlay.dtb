/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2711";
    
    fragment@0 {
        target = <&spi0>;
        __overlay__ {
            status = "okay";
            compatible = "raio,tft-display";
            reg = <0>;  /* Chip select 0 which is GPIO 8*/
            spi-max-frequency = <1000000>;  /* 10 MHz */
            spi-mode = <3>;
        };
    };
};